<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A1A4D"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:strokeColor="#4A4A8C"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="20dp">

            <!-- Иконка результата -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/test" />

            <!-- Информация о результате -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/tv_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:text="Тема: алгоритмы"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Бейдж результата -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#6363FF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="5/10"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Статус завершения -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/status_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:cardBackgroundColor="#4CAF50"
                        app:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:text="Завершено"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Дата выполнения -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:padding="9dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#A0A0FF" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="28.02.2025"
                        android:textColor="#A0A0FF"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Индикатор прогресса -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_circle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:progress="50"
                app:indicatorColor="#6363FF"
                app:trackColor="#4A4A8C"
                app:trackThickness="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>