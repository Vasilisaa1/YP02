<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Фоновый паттерн -->
    <ImageView
        android:id="@+id/bgAnimation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop"
        android:src="@drawable/code_pattern"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="-20dp"
        android:alpha="0.5"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="588dp"
        android:alpha="0.5"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Нижнее меню -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="240dp"
        android:alpha="0.5"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="304dp"
        android:layout_marginBottom="128dp"
        android:alpha="0.5"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="304dp"
        android:layout_marginBottom="420dp"
        android:alpha="0.5"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="-20dp"
        android:alpha="0.2"
        android:src="@drawable/decorative_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Карточка профиля -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#1A1A4D"
        app:cardCornerRadius="28dp"
        app:cardElevation="16dp"
        app:strokeColor="#5A5AFF"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="28dp"
            android:gravity="center_vertical">

            <!-- Квадратная аватарка с красивым оформлением -->
            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginEnd="28dp">

                <!-- Фоновое свечение -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/avatar_glow"
                    android:alpha="0.7" />

                <!-- Основная карточка аватарки -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    app:strokeColor="#5A5AFF"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:id="@+id/testImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/glavn" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Декоративный уголок -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/decorative_corner" />

            </FrameLayout>

            <!-- Информация профиля -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Загрузка..."
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="12dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Загрузка..."
                    android:textColor="#A0A0FF"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/profile_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: --"
                    android:textColor="#A0A0FF"
                    android:textSize="13sp"
                    android:background="#2A2A6D"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:letterSpacing="0.05"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Кнопка выхода -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_red_background"
        android:onClick="Back"
        android:text="ВЫХОД"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_card" />

    <!-- Нижнее меню -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topMenu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#1A1A4D"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Главная -->
            <LinearLayout
                android:id="@+id/tabMain"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="OnMain"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivMain"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/glavn"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tvMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Главная"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Профиль -->
            <LinearLayout
                android:id="@+id/tabProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/menu_item"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="OnProfil"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/userr"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Профиль"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Результаты -->
            <LinearLayout
                android:id="@+id/tabResults"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="OnResult"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivResults"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/result"
                    app:tint="@color/white" />


                <TextView
                    android:id="@+id/tvResults"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Результат"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabVictory"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:onClick="onAchivment"
                android:orientation="vertical"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivVictory"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_victory"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tvVictory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Достижения"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>